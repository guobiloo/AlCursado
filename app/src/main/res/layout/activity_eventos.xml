<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/gris_oscuro"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eventos"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/naranja"
        android:textColor="@color/blanco"
        />

    <!-- dentro de este GridView, se muestran los eventos que existan segun la info de la pagina web
    Muestra una foto del evento, un titulo y una breve descripcion.
    Al hacer click sobre algun evento, se muestra otra pantalla con una descripcion mas detallada y con la posibilidad
    de poder agendar el evento en Google Calendar -->
    <GridView
        android:id="@+id/grid_eventos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:orientation="vertical"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        />


</LinearLayout>