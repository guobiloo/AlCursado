<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/gris_oscuro">

    <!--ACA VAN LOS AVISOS QUE LLEGAN POR NOTIFICACIONES-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@color/blanco">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notificaciones"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/naranja"
            android:textColor="@color/blanco"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lista_notificaciones">

        </ListView>

    </LinearLayout>



    <!--ACA VA EL CLIMA-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clima"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/naranja"
        android:textColor="@color/blanco"
        />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context="com.example.android.clima_extendido.MainActivity"
            android:baselineAligned="false"
            android:background="@color/blanco">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_dia"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="dia"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:id="@+id/img_icono_clima" />

                <TextView
                    android:id="@+id/txt_temperatura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="°C"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    />


                <TextView
                    android:id="@+id/txt_condicion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="condicion"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:paddingEnd="6dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_dia2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="dia"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:id="@+id/img_icono_clima2" />

                <TextView
                    android:id="@+id/txt_temperatura2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="°C"
                    android:textSize="16sp"
                    android:textAlignment="center"/>


                <TextView
                    android:id="@+id/txt_condicion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="condicion"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:paddingEnd="6dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_dia3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="dia"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:id="@+id/img_icono_clima3" />

                <TextView
                    android:id="@+id/txt_temperatura3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="°C"
                    android:textSize="16sp"
                    android:textAlignment="center"/>


                <TextView
                    android:id="@+id/txt_condicion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="condicion"
                    android:textSize="12sp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>